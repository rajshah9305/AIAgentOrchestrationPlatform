// .prettierrc (root)
{
  "semi": false,
  "trailingComma": "es5",
  "singleQuote": true,
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "avoid",
  "endOfLine": "lf",
  "quoteProps": "as-needed",
  "jsxSingleQuote": true,
  "proseWrap": "preserve",
  "htmlWhitespaceSensitivity": "css",
  "embeddedLanguageFormatting": "auto",
  "plugins": ["prettier-plugin-tailwindcss"],
  "tailwindConfig": "./frontend/tailwind.config.ts",
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "proseWrap": "always",
        "printWidth": 80
      }
    },
    {
      "files": "*.json",
      "options": {
        "printWidth": 120
      }
    },
    {
      "files": ["*.yml", "*.yaml"],
      "options": {
        "tabWidth": 2,
        "printWidth": 120
      }
    }
  ]
}

// ---

// .prettierignore
# Dependencies
node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*
pnpm-debug.log*

# Build outputs
.next/
out/
dist/
build/
coverage/

# Environment files
.env
.env.local
.env.production.local
.env.test.local

# IDE
.vscode/
.idea/

# OS
.DS_Store
Thumbs.db

# Logs
*.log

# Database
*.db
*.sqlite

# Temporary
tmp/
temp/

# Generated files
*.tsbuildinfo
.eslintcache

# Package managers
package-lock.json
yarn.lock
pnpm-lock.yaml

# Prisma
prisma/migrations/

# Docker
Dockerfile*
docker-compose*.yml

# Scripts
*.sh

# Markdown tables (can be hard to format)
docs/api_documentation.txt
docs/cerebras_api_docs.txt

// ---

// frontend/.prettierrc
{
  "extends": "../.prettierrc",
  "plugins": ["prettier-plugin-tailwindcss"],
  "tailwindConfig": "./tailwind.config.ts",
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "options": {
        "parser": "typescript"
      }
    },
    {
      "files": "*.css",
      "options": {
        "parser": "css"
      }
    }
  ]
}

// ---

// backend/.prettierrc
{
  "extends": "../.prettierrc",
  "overrides": [
    {
      "files": ["*.ts"],
      "options": {
        "parser": "typescript"
      }
    },
    {
      "files": "prisma/schema.prisma",
      "options": {
        "parser": "prisma-parse",
        "plugins": ["prettier-plugin-prisma"]
      }
    }
  ]
}